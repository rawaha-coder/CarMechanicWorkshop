<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="v3_mainButtonStyle">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- ProgressBar style. -->
    <style name="CarListProgressBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:progressBarStyle">?android:attr/progressBarStyleLarge</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:indeterminateDrawable">@drawable/cmw_progress_bar</item>
        <item name="android:visibility">gone</item>

    </style>

    <!-- RecyclerView style. -->
    <style name="CarListRecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:scrollbars">vertical</item>

    </style>

</resources>