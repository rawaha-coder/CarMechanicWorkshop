<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- MainActivity Button style. -->
    <style name="MainActivityButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/main_button_marginStart</item>
        <item name="android:layout_marginEnd">@dimen/main_button_marginEnd</item>
        <item name="android:paddingTop">@dimen/main_button_paddingTopBottom</item>
        <item name="android:paddingBottom">@dimen/main_button_paddingTopBottom</item>
        <item name="android:background">@drawable/main_button_state</item>
        <item name="android:fontFamily">@string/main_button_font_family</item>
        <item name="android:textColor">@color/mainButtonTextColor</item>
        <item name="android:textSize">@dimen/main_button_textSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ProgressBar style. -->
    <style name="CarListProgressBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:progressBarStyle">?android:attr/progressBarStyleLarge</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:indeterminateDrawable">@drawable/cmw_progress_bar</item>
        <item name="android:visibility">gone</item>

    </style>

    <!-- Car List RecyclerView style. -->
    <style name="CarListRecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">55dp</item>
    </style>

    <!-- Warning Light List RecyclerView style. -->
    <style name="WarningLightListRecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">55dp</item>
    </style>

    <!-- WarningLight Button Style. -->
    <style name="WarningLightButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <!-- Empty TextView style. -->
    <style name="EmptyTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">@string/no_connect_server</item>
    </style>


</resources>