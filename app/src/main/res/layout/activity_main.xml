<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/mechanic_workshop_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/main_button_marginStart"
            android:layout_marginTop="@dimen/main_button_marginTop"
            android:layout_marginEnd="@dimen/main_button_marginEnd"
            android:paddingTop="@dimen/main_btn_paddingtopbottom"
            android:paddingBottom="@dimen/main_btn_paddingtopbottom"
            android:background="@drawable/main_button_state"
            android:fontFamily="@string/main_button_font_family"
            android:onClick="carMakerList"
            android:text="@string/mechanic_workshop_button"
            android:textColor="@color/mainButtonTextColor"
            android:textSize="@dimen/main_button_textSize"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/car_dashboard_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/main_button_marginStart"
            android:layout_marginTop="@dimen/main_button_marginTop"
            android:layout_marginEnd="@dimen/main_button_marginEnd"
            android:paddingTop="@dimen/main_btn_paddingtopbottom"
            android:paddingBottom="@dimen/main_btn_paddingtopbottom"
            android:background="@drawable/main_button_state"
            android:fontFamily="@string/main_button_font_family"
            android:onClick="dashboardLights"
            android:text="@string/dashboard_lights_button"
            android:textColor="@color/mainButtonTextColor"
            android:textSize="@dimen/main_button_textSize"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_next_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="nextVersion"
            android:text="Next Version" />


    </LinearLayout>


        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-2666553857909586/6834299299">
        </com.google.android.gms.ads.AdView>

</LinearLayout>