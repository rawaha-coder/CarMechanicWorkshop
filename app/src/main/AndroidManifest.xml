<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.automobilegt.carmechanicworkshop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- AdMob -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2666553857909586~7667456701"/>
        <activity
            android:name=".PlayVideoActivity"
            android:parentActivityName=".VideoListActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.automobilegt.carmechanicworkshop.VideoListActivity" />
        </activity>
        <activity
            android:name=".VideoListActivity"
            android:parentActivityName=".CarYearActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.automobilegt.carmechanicworkshop.CarYearActivity" />
        </activity>
        <activity
            android:name=".CarYearActivity"
            android:parentActivityName=".CarModelActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.automobilegt.carmechanicworkshop.CarModelActivity" />
        </activity>
        <activity
            android:name=".CarModelActivity"
            android:parentActivityName=".CarBrandActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.automobilegt.carmechanicworkshop.CarBrandActivity" />
        </activity>
        <activity
            android:name=".CarBrandActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.automobilegt.carmechanicworkshop.MainActivity" />
        </activity>
        <activity
            android:name=".FirstInstall"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WarningLightMeaningActivity"
            android:parentActivityName=".ListDashboardWarningLightActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.automobilegt.carmechanicworkshop.ListDashboardWarningLightActivity" />
        </activity>
        <activity
            android:name=".ListDashboardWarningLightActivity"
            android:parentActivityName=".DashboardWarningLightActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.automobilegt.carmechanicworkshop.DashboardWarningLightActivity" />
        </activity>
        <activity
            android:name=".DashboardWarningLightActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.automobilegt.carmechanicworkshop.MainActivity" />
        </activity>
        <activity
            android:name=".AskMechanicActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.automobilegt.carmechanicworkshop.MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>